<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<meta>
		<langChildren type="integer">1</langChildren>
	</meta>
	<ROOT>
		<type>array</type>
		<el>
			<options type="array">
				<TCEforms type="array">
						<config type="array">
							<type>input</type>
							<size>48</size>
							<eval>trim</eval>
						</config>
					<label>Slider-Options: </label>
				</TCEforms>
			</options>
			<slider>
				<section>1</section>
				<type>array</type>
				<el>
					<item>
						<type>array</type>
						<title>Slide</title>
						<el>
							<title>
								<TCEforms>
									<exclude>1</exclude>
									<label>Ãœberschrift</label>
									<config>
										<type>input</type>
										<eval>trim, required</eval>
										<size>30</size>
									</config>
								</TCEforms>
							</title>
							<text>
								<TCEforms type="array">
									<config type="array">
										<type>text</type>
										<cols>48</cols>
										<rows>5</rows>
									</config>
									<label>Text</label>
									<defaultExtras>richtext[]:rte_transform[flag=rte_enabled|mode=ts_css]</defaultExtras>
								</TCEforms>

							</text>
							<image>
								<TCEforms type="array">
									<label>Bild</label>
									<config type="array">
										<type>group</type>
										<internal_type>file</internal_type>
										<allowed>gif, jpg,jpeg,png</allowed>
										<max_size>10000</max_size>
										<uploadfolder>uploads/media</uploadfolder>
										<maxitems>1</maxitems>
										<size>1</size>
										<show_thumbs>1</show_thumbs>
										<selectedliststyle>Width:180px</selectedliststyle>
									</config>
								</TCEforms>
							</image>
							
							<disable>
								<TCEforms type="array">
									<label>Diesen Slide deaktivieren</label>
									<config>
									  <type>check</type>
									</config>
								</TCEforms>
							</disable>
							
						</el>
					</item>
				</el>
			</slider>
		</el>
	</ROOT>
</T3DataStructure>